@model mvc.Models.Pago
<script src="/js/pago/create.js" defer></script>
<link rel="stylesheet" href="/css/pago/create.css">
@{
    ViewData["Title"] = "Create";
    var contratos= (List<Contrato>)ViewBag.contrato;
    var inqui= (List<Inquilino>)ViewBag.inqui;
}

<h1>Registar</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <input asp-for="ContratoId" class="form-control" readonly />
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label class="control-label">Contrato</label>
				<select class="form-control" name="ContratoId" id="contraId" onchange="cambiaId()">
					@foreach (var item in contratos)
					{
						<option value="@item.ContratoId">@("("+item.inmueble.Direccion.ToString()+") Precio:"+item.MontoAlquiler)</option>
					}
				</select>
				<span asp-validation-for="ContratoId" class="text-danger"></span>
			</div>

            <div class="form-group">
                <label asp-for="NumeroPago" class="control-label"></label>
                <input asp-for="NumeroPago" class="form-control" required/>
                <span asp-validation-for="NumeroPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" required/>
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" required/>
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group" id="boton">
                <input type="submit" value="Registrar" class="btn btn-primary" />
                <a asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>


