@model mvc.Models.Contrato
<link rel="stylesheet" href="/css/contra/edit.css">
<script src="/js/contrato/edit.js" defer></script>
@{
    ViewData["Title"] = "Edit";
    var inmus= (IList<Inmueble>)ViewBag.inmu;
    var inqui= (IList<Inquilino>)ViewBag.inqui;
}

<h1>Editar</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <input asp-for="ContratoId" class="form-control" readonly/>
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InmuId" class="control-label" hidden></label>
                <input asp-for="InmuId" class="form-control" hidden  readonly/>
                <span asp-validation-for="InmuId" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label class="control-label">Inmueble</label>
				<select class="form-control" name="InmuId" onchange="cambioId()" id="selecIdInmu">
					@foreach (var item in inmus)
					{
						<option value="@item.InmuId">@("("+item.Direccion+") Tipo: "+item.TipoLocal)</option>
					}
				</select>
				<span asp-validation-for="InmuId" class="text-danger"></span>
			</div>
            <div class="form-group">
                <label asp-for="InquiId" class="control-label"hidden ></label>
                <input asp-for="InquiId" class="form-control" hidden readonly />
                <span asp-validation-for="InquiId" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label class="control-label">Inquilino</label>
				<select class="form-control" name="InquiId" onchange="cambioIdInqui()" id="selecIdInqui">
					@foreach (var item in inqui)
					{
						<option value="@item.InquiId">@("("+item.Nombre+") Dni:"+item.Dni)</option>
					}
				</select>
                <span asp-validation-for="InquiId" class="text-danger"></span>
			</div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" required />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinal" class="control-label"></label>
                <input asp-for="FechaFinal" class="form-control" required/>
                <span asp-validation-for="FechaFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoAlquiler" class="control-label"></label>
                <input asp-for="MontoAlquiler" class="form-control" required/>
                <span asp-validation-for="MontoAlquiler" class="text-danger"></span>
            </div>
            <div class="form-group" id="boton">
                <input type="submit" value="Guardar" class="btn btn-primary" />|
                    <a asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>


