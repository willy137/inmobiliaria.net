@model mvc.Models.Inmueble
<script src="/js/inmueble/create.js"></script>
<link rel="stylesheet" href="/css/inmu/create.css">
@{
    ViewData["Title"] = "Create";
    var propietarios= (List<Propietario>)ViewBag.Prop;
}

<h1>Registrar</h1>

<h4>Inmueble</h4>
<hr />
<div class="row " >
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" required />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsoComercial" class="control-label"></label>
                <input asp-for="UsoComercial" class="form-control" required />
                <span asp-validation-for="UsoComercial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoLocal" class="control-label"></label>
                <input asp-for="TipoLocal" class="form-control"  required/>
                <span asp-validation-for="TipoLocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadAmbientes" class="control-label"></label>
                <input asp-for="CantidadAmbientes" class="form-control" required/>
                <span asp-validation-for="CantidadAmbientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitud" class="control-label"></label>
                <input asp-for="Latitud" class="form-control"  required/>
                <span asp-validation-for="Latitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitud" class="control-label"></label>
                <input asp-for="Longitud" class="form-control" required/>
                <span asp-validation-for="Longitud" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" type="number" required />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label class="control-label">Propietario</label>
				<select class="form-control" name="PropId">
					@foreach (var item in propietarios)
					{
						<option value="@item.PropId">@("("+item.Nombre.ToString()+") DNI: "+item.Dni)</option>
					}
				</select>
				<span asp-validation-for="PropId" class="text-danger"></span>
			</div>
            <div class="form-group" id="boton" >
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a href="/inmuebles">Volver</a>
            </div>
        </form>

    </div>
    <div class="col-md-6" id="buscador">
            <div class="col-md-6">
                <form action="/Propietarios/Pedir">
                    <label  class="control-label">Nombre Propietario</label>
                    <input name="Nombre" class="form-control" />
                    <input type="number" name="PropId" value="1" hidden >
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                </form>
            </div>
    </div>
</div>



